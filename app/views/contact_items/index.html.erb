<p id="notice"><%= notice %></p>

<h1>Contact Items</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_items.each do |contact_item| %>
      <tr>
        <td><%= contact_item.first_name %></td>
        <td><%= contact_item.last_name %></td>
        <td><%= contact_item.phone_number %></td>
        <td><%= contact_item.email %></td>
        <td><%= contact_item.website %></td>
        <td><%= link_to 'Show', contact_item %></td>
        <td><%= link_to 'Edit', edit_contact_item_path(contact_item) %></td>
        <td><%= link_to 'Destroy', contact_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

